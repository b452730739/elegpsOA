<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/onLinePayRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/pay_before_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/pay_before_loading"
                android:theme="@style/BaseTextView" />

            <RadioButton
                android:id="@+id/pay_after_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_after_loading"
                android:theme="@style/BaseTextView" />


            <RadioButton
                android:id="@+id/pay_before_discharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_before_discharge"
                android:theme="@style/BaseTextView" />


            <RadioButton
                android:id="@+id/pay_after_discharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_after_discharge"
                android:theme="@style/BaseTextView" />

            <RadioButton
                android:id="@+id/pay_after_discharge_by_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_after_discharge_by_day"
                android:theme="@style/BaseTextView" />

            <LinearLayout
                android:id="@+id/day_Layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_5"
                android:orientation="horizontal"
                android:visibility="gone">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_day"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:minWidth="@dimen/space_50"
                    android:text="0"
                    android:theme="@style/BaseTextView" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/by_day"
                    android:theme="@style/BaseTextView" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/pay_installment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_installment"
                android:theme="@style/BaseTextView" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/pay_installment_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:visibility="gone">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_5"
                android:orientation="horizontal"
               >
                <TextView
                    android:id="@+id/before_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/before_loading"
                    android:theme="@style/BaseTextView" />
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_percentage1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:minWidth="@dimen/space_50"
                    android:text="0"
                    android:theme="@style/BaseTextView" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/the_percentage"
                    android:theme="@style/BaseTextView" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_5"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/after_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/after_loading"
                    android:theme="@style/BaseTextView" />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_percentage2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:minWidth="@dimen/space_50"
                android:text="0"
                android:theme="@style/BaseTextView" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/the_percentage"
                android:theme="@style/BaseTextView" />
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_5"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/before_discharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/before_discharge"
                    android:theme="@style/BaseTextView" />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_percentage3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:minWidth="@dimen/space_50"
                android:text="0"
                android:theme="@style/BaseTextView" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/the_percentage"
                android:theme="@style/BaseTextView" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginLeft="@dimen/space_5"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/after_discharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/after_discharge"
                    android:theme="@style/BaseTextView" />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_percentage4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:minWidth="@dimen/space_50"
                android:text="0"
                android:theme="@style/BaseTextView" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/the_percentage"
                android:theme="@style/BaseTextView" />
        </LinearLayout>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>