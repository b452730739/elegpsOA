<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="BaseButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:overridesImplicitlyEnabledSubtype">true</item>
    </style>
    <style name="BaseLightButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorButtonNormal">@color/colorLightPrimaryDark</item>
        <item name="colorControlActivated">@color/colorLightPrimaryDark</item>
        <item name="android:overridesImplicitlyEnabledSubtype">true</item>
    </style>
    <style name="Base16Button" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:overridesImplicitlyEnabledSubtype">true</item>
    </style>
    <style name="Base14Button" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:overridesImplicitlyEnabledSubtype">true</item>
    </style>
    <style name="BaseEditText">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="BaseTextView">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="BaseSize18TextView">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="DarkGray16TextView">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
    <style name="BaseSize15TextView">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="BaseSize20TextView">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="Text_value" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="Text_hone_item" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:gravity">center_horizontal</item>

    </style>
    <style name="Text_main_item" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>

    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
</resources>
